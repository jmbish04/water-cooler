{
  "name": "curation-hub",
  "version": "1.0.0",
  "description": "AI-Curated Discovery Hub â€” Modular Cloudflare Worker with Actors, Vectorize, and Mantine UI",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:ui": "vite --config ui/vite.config.ts",
    "build:frontend": "vite build --config ui/vite.config.ts",
    "build": "npm run build:frontend",
    "db:create": "wrangler d1 create curation_hub",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply DB --remote",
    "db:migrate:local": "wrangler d1 migrations apply DB --local",
    "migrate:db:remote": "wrangler d1 migrations apply DB --remote",
    "db:execute": "wrangler d1 execute DB --file=./schema.sql --remote",
    "db:execute:local": "wrangler d1 execute DB --file=./schema.sql --local",
    "db:studio": "drizzle-kit studio",
    "vectorize:create": "wrangler vectorize create curation_vectors_v2 --preset @cf/baai/bge-large-en-v1.5",
    "kv:create": "wrangler kv namespace create CACHE",
    "r2:create": "wrangler r2 bucket create water-cooler-assets",
    "queue:create": "wrangler queues create water-cooler-scan",
    "deploy": "npm run migrate:db:remote && npm run build:frontend && wrangler deploy",
    "tail": "wrangler tail",
    "types": "wrangler types",
    "lint": "eslint src ui/src",
    "format": "prettier --write \"src/**/*.ts\" \"ui/src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "hono": "^4.6.3",
    "@hono/zod-validator": "^0.2.2",
    "zod": "^3.23.8",
    "openapi3-ts": "^4.4.0",
    "kysely": "^0.27.3",
    "kysely-d1": "^0.3.0",
    "drizzle-orm": "^0.33.0",
    "@cloudflare/agents": "^0.1.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^22.8.4",
    "wrangler": "^3.86.1",
    "typescript": "^5.6.3",
    "drizzle-kit": "^0.24.0",

    "vite": "^5.4.11",
    "@vitejs/plugin-react": "^4.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",

    "@mantine/core": "^7.14.3",
    "@mantine/hooks": "^7.14.3",
    "@mantine/notifications": "^7.14.3",
    "@mantine/modals": "^7.14.3",
    "@tabler/icons-react": "^3.21.0",
    "swr": "^2.2.5",

    "prettier": "^3.3.3",
    "eslint": "^9.14.0",
    "@eslint/js": "^9.14.0",
    "typescript-eslint": "^8.13.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "globals": "^15.12.0"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "ai",
    "curation",
    "vectorize",
    "durable-objects",
    "mantine"
  ],
  "author": "",
  "license": "MIT"
}
