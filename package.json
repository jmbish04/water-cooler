{
  "name": "curation-hub",
  "version": "1.0.0",
  "description": "AI-Curated Discovery Hub â€” Modular Cloudflare Worker with Actors, Vectorize, and Mantine UI",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:ui": "vite --config ui/vite.config.ts",
    "build:frontend": "vite build --config ui/vite.config.ts",
    "build": "npm run build:frontend",
    "db:create": "wrangler d1 create curation_hub",
    "db:migrate": "wrangler d1 migrations apply DB --remote",
    "db:migrate:local": "wrangler d1 migrations apply DB --local",
    "db:execute": "wrangler d1 execute curation_hub --file=./schema.sql --remote",
    "db:execute:local": "wrangler d1 execute curation_hub --file=./schema.sql --local",
    "vectorize:create": "wrangler vectorize create curation_vectors --dimensions=768 --metric=cosine",
    "kv:create": "wrangler kv:namespace create CACHE",
    "r2:create": "wrangler r2 bucket create water-cooler-assets",
    "queue:create": "wrangler queues create water-cooler-scan",
    "deploy": "npm run db:migrate && npm run build:frontend && wrangler deploy",
    "tail": "wrangler tail",
    "types": "wrangler types",
    "lint": "eslint src ui/src",
    "format": "prettier --write \"src/**/*.ts\" \"ui/src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "hono": "^4.6.3",
    "@hono/zod-validator": "^0.2.2",
    "zod": "^3.23.8",
    "openapi3-ts": "^4.4.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^22.8.4",
    "wrangler": "^3.86.1",
    "typescript": "^5.6.3",

    "vite": "^5.4.11",
    "@vitejs/plugin-react": "^4.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",

    "@mantine/core": "^7.14.3",
    "@mantine/hooks": "^7.14.3",
    "@mantine/notifications": "^7.14.3",
    "@mantine/modals": "^7.14.3",
    "@tabler/icons-react": "^3.21.0",
    "swr": "^2.2.5",

    "prettier": "^3.3.3",
    "eslint": "^9.14.0"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "ai",
    "curation",
    "vectorize",
    "durable-objects",
    "mantine"
  ],
  "author": "",
  "license": "MIT"
}
